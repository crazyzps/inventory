<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/main_fragment">

    <fragment
        android:id="@+id/main_fragment"
        android:name="com.shouma.zps.inventory.ui.fragment.MainFragment"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_main_fragment_to_batch_fragment"
            app:destination="@id/batch_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

        <action
            android:id="@+id/action_main_fragment_to_settings_fragment"
            app:destination="@id/settings_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_main_fragment_to_about_fragment"
            app:destination="@id/about_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_main_fragment_to_user_fragment"
            app:destination="@id/user_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_main_fragment_to_write_tag_fragment"
            app:destination="@id/write_tag_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_main_fragment_to_find_tag_fragment"
            app:destination="@id/find_tag_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />


    </fragment>

    <fragment
        android:id="@+id/batch_fragment"
        android:name="com.shouma.zps.inventory.ui.fragment.BatchFragment"
        tools:layout="@layout/fragment_batch">

        <action
            android:id="@+id/action_batch_fragment_to_condition_fragment"
            app:destination="@id/condition_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>

    <fragment android:id="@+id/condition_fragment"
        android:name="com.shouma.zps.inventory.ui.fragment.ConditionFragment"
        tools:layout="@layout/fragment_condition">

        <action
            android:id="@+id/condition_fragment_to_uhf_fragment"
            app:destination="@id/uhf_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

        <action
            android:id="@+id/condition_fragment_to_scan_fragment"
            app:destination="@id/scan_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>

    <fragment android:id="@+id/uhf_fragment"
        android:name="com.shouma.zps.inventory.ui.fragment.UhfFragment"
        tools:layout="@layout/fragment_uhf">


    </fragment>

    <fragment android:id="@+id/scan_fragment"
        android:name="com.shouma.zps.inventory.ui.fragment.ScanFragment"
        tools:layout="@layout/fragment_scan">

    </fragment>

    <fragment android:id="@+id/search_fragment"
        android:name="com.shouma.zps.inventory.ui.fragment.SearchFragment"
        tools:layout="@layout/fragment_search">

    </fragment>

    <fragment
        android:id="@+id/settings_fragment"
        android:name="com.shouma.zps.inventory.ui.fragment.SettingsFragment"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/write_tag_fragment"
        android:name="com.shouma.zps.inventory.ui.fragment.WriteTagFragment"
        tools:layout="@layout/fragment_write_tag" />

    <fragment
        android:id="@+id/find_tag_fragment"
        android:name="com.shouma.zps.inventory.ui.fragment.FindTagFragment"
        tools:layout="@layout/fragment_find_tag" />

    <fragment
        android:id="@+id/user_fragment"
        android:name="com.shouma.zps.inventory.ui.fragment.UserFragment"
        tools:layout="@layout/fragment_user" />

    <fragment
        android:id="@+id/about_fragment"
        android:name="com.shouma.zps.inventory.ui.fragment.AboutFragment"
        tools:layout="@layout/fragment_about" />

</navigation>